@model IEnumerable<MvcApiExamenAzureAMH.Models.Personaje>

@{
    ViewData["Title"] = "SeriesServidor";
}

<h1>Personajes Servidor</h1>

<p>
    <a asp-action="UpdatePersonajeSerie">Mover Personajes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" style="width:150px;height:150px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
              <a class="btn btn-danger" asp-action="DeletePersonaje" asp-controller="Personajes" asp-route-idpj="@item.IdPersonaje">Eliminar</a>
            </td>
        </tr>
}
        <td colspan="5" class="text-center">
            <a class="btn btn-success" asp-action="CreatePersonaje" asp-controller="Personajes">Nuevo</a>
        </td>
    </tbody>
</table>
