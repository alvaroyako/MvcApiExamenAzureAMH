@model IEnumerable<MvcApiExamenAzureAMH.Models.Serie>

@{
    ViewData["Title"] = "SeriesServidor";
}

<h1>Series Servidor</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" style="width:150px;height:150px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
               <a asp-controller="Series" asp-action="DetallesSerie" asp-route-idserie="@item.IdSerie" class="btn btn-info">Detalles</a>
               <a asp-controller="Series" asp-action="UpdateSerie" asp-route-idserie="@item.IdSerie" class="btn btn-warning">Update</a>
               <a asp-controller="Series" asp-action="PersonajesSerie" asp-route-idserie="@item.IdSerie" class="btn btn-success">Personajes</a>
            
            </td>
        </tr>
}
    </tbody>
</table>
